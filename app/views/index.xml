<Alloy>
  <TabGroup platform="ios">
    <Tab id="listTab">
      <Require id="listWindow" src="ListTab"/>
    </Tab>
    <Tab id="promiseTab">
      <Window title="Promise Example" class="container">
        <ImageView id="promiseImage" class="picture"/>
        <Picker id="promisePicker">
          <PickerRow title="Dog"/>
          <PickerRow title="Bird"/>
          <PickerRow title="Cat"/>
        </Picker>
      </Window>
    </Tab>
    <Tab id="callbackTab">
      <Window title="Callback Example" class="container">
        <ImageView id="callbackImage" class="picture"/>
        <Picker id="callbackPicker">
          <PickerRow title="Dog"/>
          <PickerRow title="Bird"/>
          <PickerRow title="Cat"/>
        </Picker>
      </Window>
    </Tab>
  </TabGroup>
  <Require id="listWindow" src="ListTab" platform="android"/>
</Alloy>
