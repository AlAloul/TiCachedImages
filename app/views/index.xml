<Alloy>
  <TabGroup>
    <Tab id="callbackTab">
      <Window title="Callback Example" class="container">
        <ImageView id="callbackImage" class="picture"/>
        <Picker id="callbackPicker">
          <PickerRow title="Dog"/>
          <PickerRow title="Bird"/>
          <PickerRow title="Cat"/>
        </Picker>
      </Window>
    </Tab>
    <Tab id="promiseTab">
      <Window title="Promise Example" class="container">
        <ImageView id="promiseImage" class="picture"/>
        <Picker id="promisePicker">
          <PickerRow title="Dog"/>
          <PickerRow title="Bird"/>
          <PickerRow title="Cat"/>
        </Picker>
      </Window>
    </Tab>
    <Tab id="listTab">
      <Window title="Table Example" class="container">
        <RightNavButton>
          <Button id="clearCacheBtn"/>
        </RightNavButton>
        <TableView id="tableList"/>
      </Window>
    </Tab>
  </TabGroup>
</Alloy>
